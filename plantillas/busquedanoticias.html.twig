{% extends "base2.html.twig" %}
{% block contenido2 %}
<div class="container margintop">
    <form method="POST" >
        <div class="row">
                {% for i in datos %}
                        <div class="col-md-3 cajitas">
                            <h2><a href="/noticia/{{i['id']}}"> 
                            {{ i['titulo'] }}
                            </a></h2>
                            <p> {{ i['noticia']|striptags|slice(0, 150)}}</p>
                         </div>
                 {% else %}
                 <div class="info center">No se han encontrado datos</div>
                 {% endfor %}
             </div>   
        <div class="row">
            <div class="col-md-12">
                <div class="bs-component">
                    <ul class="pagination">
                      {% for i in 1..N %}
                        <li><button onClick="this.form.action = '/buscarnoticia/{{i}}'">{{i}}</button></li>
                      {% endfor %}
                    </ul>
                 </div>
           </div>
         </div>
        <div class="row" style="visibility: hidden">
            <div class="col-md-12">
            <br/><label>Está filtrando por la palabra '{{ datosBusqueda[0] }}'</label>
                      <input type="hidden" value="{{ datosBusqueda[0] }}" name="inputbuscarnoticias" />
                <br/><label>Está filtrando por el campo 
                    {% if datosBusqueda[1] == 1 %}
                    'Nick'
                    {% endif %}
                    {% if datosBusqueda[1] == 2 %}
                    'Tags'
                    {% endif %}
                    {% if datosBusqueda[1] == 3 %}
                    'Contenido'
                    {% endif %}
                    </label>
                <input type="hidden" value="{{datosBusqueda[1]}}" name="filtradonoticia" />
            </div>
        </div>
     </form>
    </div>
{% endblock %}