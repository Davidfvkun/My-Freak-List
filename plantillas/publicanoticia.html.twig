{% extends "base2.html.twig" %}
{% block contenido2 %}
<div class="container margintop">
    <div class="row">
        <div class="col-lg-2">
            <label class="minibuttons flatly" onClick="CambiaEstilos('Flatly')">&#9679;</label>
            <label class="minibuttons readable" onClick="CambiaEstilos('Readable')">&#9679;</label>
            <label class="minibuttons cosmo" onClick="CambiaEstilos('Cosmo')">&#9679;</label>
            <label class="minibuttons cerulean" onClick="CambiaEstilos('Cerulean')">&#9679;</label>
            <label class="minibuttons cyborg" onClick="CambiaEstilos('Cyborg')">&#9679;</label>
            <label class="minibuttons lumen" onClick="CambiaEstilos('Lumen')">&#9679;</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Publicar noticia</h3>
                    </div>
                    <div class="panel panel-body">
                        <form class="form-horizontal" method="POST" action="">
                            <div class="form-group">
                                <label for="inputBusqueda" class="col-lg-2 control-label">Titulo de la noticia *</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="introducenoticia">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputBusqueda" class="col-lg-2 control-label">Datos de la noticia *</label>
                                <div class="col-lg-10">
                                    <textarea rows="15" type="text"class="form-control" name="noticia"
                                                  placeholder="Pon aquí la noticia"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputBusqueda" class="col-lg-2 control-label">Fuente</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="fuentenoticia">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputBusqueda" class="col-lg-2 control-label">Tags *</label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" name="tags" placeholder="Palabras clave que identifiquen tu noticia">
                                    <label>Escribe las palabras separadas por comas</label>
                                </div>
                            </div>
                                <div class="center">
                                    <button class="btn btn-primary" name="publicar">Publicar</button>
                                </div>
                        </form>
                    </div>
             </div>
         </div>
         <div class="col-md-5">
            <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title"> Buscar noticia</h3>
                    </div>
                    <div class="panel panel-body">
                        <form class="form-horizontal" method="POST" action="">
                        <div class="form-group">
                            <label for="busquedausuario" class="col-lg-2 control-label">Buscar usuario</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" name="inputbuscarnoticias">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="select" class="col-lg-2 control-label">Filtrar por</label>
                            <div class="col-lg-10">
                                <select class="form-control" id="selectfiltranoticias" name="filtrado">
                                    <option value="1">Nick</option>
                                    <option value="2">Tags</option>
                                    <option value="3">Contenido</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-10 center">
                            <button type="submit" class="btn btn-success" name="buscarnoticia">Buscar</button>
                        </div>
                    </form>
                    </div>
             </div>
         </div>
    </div>
</div>
{% endblock %}
